<!DOCTYPE html>
<html>
<head>
	<title>Loginfb</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<% if user_signed_in? %>
	Has ingresado con <strong><%= current_user.email %></strong>.
	<%= link_to 'Editar', edit_user_registration_path, :class => 'navbar-link' %> 

	<%= link_to "cerrar sesion", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>



	<% else %>

	<%= link_to('Login', new_user_session_path) %> 
	<%=link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook)%>

	<% end %>
 	<ul>
		<% ["es","en"].each do |locale| %>
		<li>
			<%= link_to locale, locale_path(locale) %>
		</li>
		<% end %>
	</ul>
	<%= yield %>

</body>
</html>
